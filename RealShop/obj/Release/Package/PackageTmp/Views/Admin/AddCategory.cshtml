@model RealShop.Models.CategoryViewModel

@{
    ViewBag.Title = "SaveCategory";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<h2>Добавление новой категории</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        
        <div class="editor-label">
            @Html.LabelFor(model=>model.CategoryName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryName, new{required="required"})
            <span style="color:red">@Html.ValidationMessageFor(model => model.CategoryName)</span>
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


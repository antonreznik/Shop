            @Html.EditorFor(model => model.Price)
        </div>

        
        <div class="editor-field">
            @Html.LabelFor(model => model.Size50ml)
            @Html.CheckBoxFor(model => model.Size50ml)
            @Html.LabelFor(model => model.PriceFor50ml)
            @Html.EditorFor(model => model.PriceFor50ml)
        </div>

        <div class="editor-field">
            @Html.LabelFor(model => model.Size75ml)

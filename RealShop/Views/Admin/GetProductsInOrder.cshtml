@model RealShop.Models.OrderViewModel


<table class="table-bordered table-condensed">
    <tr>
        <th>ID товара</th>
        <th>Наименование</th>
        <th>ID категории</th>
        <th>Категория</th>
        <th>Количество</th>
        <th>Стоимость</th>
    </tr>
    @foreach (var item in Model.ProductInOrder)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>@item.Quantity</td>
            <td>@item.TotalPrice</td>
        </tr>
    }

    <tr>
        <td></td>
        <td>Доставка</td>
        <td></td>
        <td></td>
        <td></td>
        <td>@Model.DeliveryPrice</td>
    </tr>

    <tr>
        <td></td>
        <td>Итого</td>
        <td></td>
        <td></td>
        <td></td>
        <td>@(Model.TotalPriceOfAllProducts + Model.DeliveryPrice)</td>
    </tr>
</table>